{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": [
    "develop"
  ],
  "extends": [
    "config:recommended",
    ":preserveSemverRanges",
    ":dependencyDashboard",
    ":rebaseStalePrs",
    ":enableVulnerabilityAlertsWithLabel('security')",
    "group:recommended"
  ],
  "endpoint": "gitlab.com",
  "platform": "gitlab",
  "persistRepoData": true,
  "logFileLevel": "error",
  "onboardingConfig": {
    "extends": [
      "renovate/renovate-config"
    ]
  },
  "repositories": [
    "rhein-audio/ticketkings"
  ],
  "autodiscover": true,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ]
}

